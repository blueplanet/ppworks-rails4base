%ul.list-unstyled.devise-menu
  - if controller_name != 'sessions'
    %li= link_to t('nav.devise.sessions.new'), new_session_path(resource_name)

  - if devise_mapping.registerable? && controller_name != 'registrations'
    %li= link_to t('nav.devise.registrations.new'), new_registration_path(resource_name)

  - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
    %li= link_to t('nav.devise.passwords.new'), new_password_path(resource_name)

  - if devise_mapping.confirmable? && controller_name != 'confirmations'
    %li= link_to t('nav.devise.confirmations.new'), new_confirmation_path(resource_name)

  - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
    %li= link_to t('nav.devise.unlocks.new'), new_unlock_path(resource_name)

  - if devise_mapping.omniauthable?
    - resource_class.omniauth_providers.each do |provider|
      %li= link_to t('nav.devise.omniauth_authorize', provider: provider.to_s.titleize), omniauth_authorize_path(resource_name, provider)
